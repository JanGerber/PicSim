                <TextBox Grid.Column="0" Grid.Row="8"   Text="38 - 3F " Grid.ColumnSpan="2"/>
                <TextBox Grid.Column="1" Grid.Row="8"   Text="{Binding Speicher.Register[56],StringFormat=0x{0:X2}}" />
                <TextBox Grid.Column="2" Grid.Row="8"   Text="{Binding Speicher.Register[57],StringFormat=0x{0:X2}}" />
