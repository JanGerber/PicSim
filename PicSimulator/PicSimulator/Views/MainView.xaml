                <TextBox Grid.Column="0" Grid.Row="7"   Text="30 - 37 " Grid.ColumnSpan="2"/>
                <TextBox Grid.Column="1" Grid.Row="7"   Text="{Binding Speicher.Register[48],StringFormat=0x{0:X2}}" />
                <TextBox Grid.Column="2" Grid.Row="7"   Text="{Binding Speicher.Register[49],StringFormat=0x{0:X2}}" />
