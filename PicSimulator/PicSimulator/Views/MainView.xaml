                <TextBox Grid.Column="2" Grid.Row="5"   Text="{Binding Speicher.Register[33],StringFormat=0x{0:X2}}" />
                <TextBox Grid.Column="3" Grid.Row="5"   Text="{Binding Speicher.Register[34],StringFormat=0x{0:X2}}" />
                <TextBox Grid.Column="4" Grid.Row="5"   Text="{Binding Speicher.Register[35],StringFormat=0x{0:X2}}" />
                <TextBox Grid.Column="5" Grid.Row="5"   Text="{Binding Speicher.Register[36],StringFormat=0x{0:X2}}" />
