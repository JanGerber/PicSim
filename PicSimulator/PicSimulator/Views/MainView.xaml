            </Grid>
        </DockPanel>
        <DockPanel  Grid.Column="2" Grid.Row="1">
            <Grid Name="InputOutput" Margin="0,220,0,0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBox Grid.Column="0" Grid.Row="1"   Text="IOPorts " Grid.ColumnSpan="2"/>
            </Grid>
        </DockPanel>    
    </Grid>

</Window>
